<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toposolid Grading Tool" Height="680" Width="400"
        WindowStartupLocation="Manual" Left="250" Top="100"
        ResizeMode="CanResize"
        WindowStyle="None"
        Foreground="{DynamicResource TextBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1"
        Background="{DynamicResource WindowBrush}">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="ControlBrush" Color="White"/>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#808080"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0080FF"/>
        <SolidColorBrush x:Key="HeaderTextBrush" Color="White"/>
        <SolidColorBrush x:Key="HeaderSubTextBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="ExpanderBrush" Color="#E6F2FF"/>
        <SolidColorBrush x:Key="ExpanderBorderBrush" Color="#B3D9FF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="StatusReadyBrush" Color="Green"/>
        <SolidColorBrush x:Key="StatusErrorBrush" Color="Red"/>
        <SolidColorBrush x:Key="ButtonBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#E6F2FF"/>
        <SolidColorBrush x:Key="PressedBrush" Color="#CCE8FF"/>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource ControlBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>
        <Style TargetType="RadioButton"> <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/> </Style>
        <Style TargetType="CheckBox"> <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/> </Style>
        <Style TargetType="Label"> <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/> </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <!-- Header (Custom Title Bar) -->
        <Border Name="HeaderDrag" Grid.Row="0" Background="{DynamicResource AccentBrush}" Padding="15,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Grading Assistant" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource HeaderTextBrush}"/>
                    <TextBlock Text="Slope Control &amp; Edge Repair" FontSize="12" Foreground="{DynamicResource HeaderSubTextBrush}"/>
                </StackPanel>

                <Button Name="Btn_WinClose" Grid.Column="1" Content="âœ•" Width="30" Height="30" 
                        Foreground="{DynamicResource HeaderTextBrush}" Background="Transparent" BorderThickness="0" 
                        FontSize="14" FontWeight="Bold" Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FFCCCC"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Content Area Wrapper (to keep margins) -->
        <Grid Grid.Row="1" Margin="15,0,15,15">
             <Expander Header="Data Persistence" IsExpanded="False" Background="{DynamicResource ExpanderBrush}" BorderBrush="{DynamicResource ExpanderBorderBrush}" Foreground="{DynamicResource TextBrush}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Select a graded Toposolid to recall settings." 
                               FontSize="10" Foreground="{DynamicResource TextLightBrush}" TextWrapping="Wrap" VerticalAlignment="Center"/>
                    <Button Name="Btn_ReadRecipe" Content="Load Recipe" Grid.Column="1" Width="100" Height="26" FontWeight="SemiBold"/>
                </Grid>
            </Expander>
        </Grid>

        <Grid Grid.Row="2" Margin="15,0,15,15">
            <GroupBox Header="2. Geometry &amp; Method" Padding="10" Background="{DynamicResource ControlBrush}" Foreground="{DynamicResource TextBrush}" BorderBrush="{DynamicResource BorderBrush}">
                <StackPanel>
                    <TextBlock Text="Calculation Mode:" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton Name="Rb_MatchStakes" Content="Match Stakes" GroupName="Method" IsChecked="True" Margin="0,0,15,0" Foreground="{DynamicResource TextBrush}"/>
                        <RadioButton Name="Rb_UseSlope" Content="Use Slope %" GroupName="Method" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Slope:" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                        <TextBox Name="Tb_Slope" Text="2.0" Grid.Column="1" VerticalContentAlignment="Center" IsEnabled="False"/>
                        <TextBlock Text="%" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{DynamicResource TextLightBrush}"/>
                    </Grid>
                    <Separator Margin="0,5"/>

                    <Grid Margin="0,5,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Button Name="Btn_SelectStakes" Content="Select Stakes (Start &amp; End)" Height="25" HorizontalAlignment="Left" Width="180"/>
                            <TextBlock Name="Lb_StartStake" Text="Start: [None]" FontSize="11" Foreground="{DynamicResource TextLightBrush}" Margin="2,4,0,0"/>
                            <TextBlock Name="Lb_EndStake" Text="End: [None]" FontSize="11" Foreground="{DynamicResource TextLightBrush}" Margin="2,2,0,0"/>
                        </StackPanel>
                        <Button Name="Btn_Swap" Content="Swap" Grid.Column="1" Height="25" VerticalAlignment="Top" IsEnabled="False"/>
                    </Grid>
                    
                    <StackPanel>
                        <Button Name="Btn_SelectLine" Content="Select Guide Line" Height="25" HorizontalAlignment="Left" Width="180"/>
                        <TextBlock Name="Lb_Line" Text="Line: [None]" FontSize="11" Foreground="{DynamicResource TextLightBrush}" Margin="2,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="3" Margin="15,0,15,15">
        <GroupBox Header="3. Parameters" Grid.Row="3" Margin="0,0,0,15" Padding="10" Background="{DynamicResource ControlBrush}" Foreground="{DynamicResource TextBrush}" BorderBrush="{DynamicResource BorderBrush}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Path Width:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Foreground="{DynamicResource TextBrush}"/>
                    <TextBox Name="Tb_Width" Text="6.0" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1"/>
                    <TextBlock Text="ft" VerticalAlignment="Center" Margin="5,0,0,0" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource TextLightBrush}"/>
                    
                    <TextBlock Text="Falloff Dist:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Foreground="{DynamicResource TextBrush}"/>
                    <TextBox Name="Tb_Falloff" Text="10.0" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Text="ft" VerticalAlignment="Center" Margin="5,0,0,0" Grid.Row="1" Grid.Column="2" Foreground="{DynamicResource TextLightBrush}"/>
                    
                    <TextBlock Text="Grid Resolution:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Foreground="{DynamicResource TextBrush}"/>
                    <TextBox Name="Tb_Grid" Text="3.0" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="1"/>
                    <TextBlock Text="ft" VerticalAlignment="Center" Margin="5,0,0,0" Grid.Row="2" Grid.Column="2" Foreground="{DynamicResource TextLightBrush}"/>
                </Grid>
                <Separator Margin="0,5"/>
                <CheckBox Name="Cb_ResetPoints" Content="Reset Resolution (Remove old points)" Margin="0,5,0,0" IsChecked="False" Foreground="{DynamicResource TextBrush}"
                          ToolTip="If checked, existing points near the path will be removed before adding new ones."/>
            </StackPanel>
        </GroupBox>
        </Grid>

        <Grid Grid.Row="5" Margin="15,0,15,15">
            <StackPanel>
                <Label Name="Lb_Status" Content="Ready." HorizontalContentAlignment="Center" Foreground="{DynamicResource TextLightBrush}" Margin="0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="Btn_Stitch" Content="Stitch Edge" Height="40" Margin="0,0,5,0" Grid.Column="0" FontWeight="SemiBold"/>
                    <Button Name="Btn_Edging" Content="Run Edging" Height="40" Margin="0,0,5,0" Grid.Column="1" IsEnabled="False"/>
                    <Button Name="Btn_Run" Content="Sculpt" Height="40" Margin="0,0,0,0" Grid.Column="2" FontWeight="Bold" IsEnabled="False"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>