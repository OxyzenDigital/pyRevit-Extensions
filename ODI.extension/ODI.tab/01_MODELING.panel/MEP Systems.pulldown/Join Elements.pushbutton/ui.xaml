<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join Elements" Height="520" Width="400"
        WindowStartupLocation="Manual" Left="200" Top="200"
        ResizeMode="NoResize"
        WindowStyle="None"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1"
        Background="{DynamicResource WindowBrush}">

    <Window.Resources>
        <!-- Palette from Manage Pipe Systems -->
        <SolidColorBrush x:Key="WindowBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="ControlBrush" Color="White"/>
        <SolidColorBrush x:Key="ButtonBrush" Color="White"/>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0080FF"/>
        <SolidColorBrush x:Key="SelectionBrush" Color="#CCE8FF"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#E5F3FF"/>
        <SolidColorBrush x:Key="FooterBrush" Color="#F5F5F5"/>

        <!-- Dark Card Palette -->
        <SolidColorBrush x:Key="CardBrush" Color="#282a2f"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#374151"/>
        <SolidColorBrush x:Key="CardTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardSubTextBrush" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="CardLabelBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="CardAccentBrush" Color="#60A5FA"/>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SelectionBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Resources -->
        <SolidColorBrush x:Key="DisabledBrush" Color="#BDC3C7"/>
        <SolidColorBrush x:Key="DisabledTextBrush" Color="#ECF0F1"/>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DisabledBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkCardButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardLabelBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource CardAccentBrush}"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                 <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#30FFFFFF"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource CardAccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Selection (Dark Card) -->
            <RowDefinition Height="Auto"/> <!-- Solution (Light Card) -->
            <RowDefinition Height="*"/>    <!-- Spacer -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Name="HeaderDrag" Grid.Row="0" Background="{DynamicResource AccentBrush}" Padding="15,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Join Elements" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Smart Connect &amp; Route" FontSize="11" Foreground="#E0E0E0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                     <Button Name="Btn_Settings" Width="30" Height="30" Padding="0"
                            Foreground="White" Background="Transparent" BorderThickness="0" 
                            ToolTip="Settings">
                        <Button.Content>
                            <Viewbox Width="20" Height="20">
                                <Path Data="M19.43 12.98c.04-.32.07-.64.07-.98s-.03-.66-.07-.98l2.11-1.65c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.3-.61-.22l-2.49 1c-.52-.4-1.08-.73-1.69-.98l-.38-2.65C14.46 2.18 14.25 2 14 2h-4c-.25 0-.46.18-.5.43l-.38 2.65c-.61.25-1.17.59-1.69.98l-2.49-1c-.23-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64l2.11 1.65c-.04.32-.07.65-.07.98s.03.66.07.98l-2.11 1.65c-.19.15-.24.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1c.52.4 1.08.73 1.69.98l.38 2.65c.04.24.25.42.5.42h4c.25 0 .46-.18.5-.42l.38-2.65c.61-.25 1.17-.59 1.69-.98l2.49 1c.23.09.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.65zM12 15.5c-1.93 0-3.5-1.57-3.5-3.5s1.57-3.5 3.5-3.5 3.5 1.57 3.5 3.5-1.57 3.5-3.5 3.5z" 
                                      Fill="White" />
                            </Viewbox>
                        </Button.Content>
                    </Button>
                    <Button Name="Btn_WinClose" Content="✕" Width="30" Height="30" 
                            Foreground="White" Background="Transparent" BorderThickness="0" 
                            FontSize="14" FontWeight="Bold" ToolTip="Close"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Selection Card (Dark) -->
        <Border Grid.Row="1" Margin="15,0,15,10" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" CornerRadius="4">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title Row -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="SELECTION" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource CardLabelBrush}" VerticalAlignment="Center"/>
                    <Button Name="Btn_Select" Content="PICK NEW" Style="{StaticResource DarkCardButton}" HorizontalAlignment="Right"/>
                </Grid>

                <!-- Source/Target -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Source -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="SOURCE" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource CardLabelBrush}"/>
                        <TextBlock Name="Lb_Source" Text="-" Foreground="{DynamicResource CardTextBrush}" FontSize="12" Margin="0,2,0,0" TextWrapping="Wrap"/>
                        <Border Height="2" Width="20" Background="{DynamicResource CardAccentBrush}" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Swap -->
                    <Button Name="Btn_Swap" Grid.Column="1" Content="⇄" Style="{StaticResource DarkCardButton}" 
                            FontSize="14" BorderThickness="0" Foreground="{DynamicResource CardLabelBrush}"
                            VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Swap"/>

                    <!-- Target -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="TARGET" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource CardLabelBrush}" HorizontalAlignment="Right"/>
                        <TextBlock Name="Lb_Target" Text="-" Foreground="{DynamicResource CardTextBrush}" FontSize="12" Margin="0,2,0,0" TextWrapping="Wrap" TextAlignment="Right"/>
                        <Border Height="2" Width="20" Background="{DynamicResource CardLabelBrush}" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Solution Card (Light) -->
        <Border Grid.Row="2" Margin="15,0,15,10" Background="{DynamicResource ControlBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="PREVIEW" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextLightBrush}" Margin="0,0,0,10"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>

                    <Button Name="Btn_Prev" Grid.Column="0" Content="❮" Height="30" FontSize="14" Padding="0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Name="Lb_SolName" Text="Direct Connection" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Name="Lb_SolDesc" Text="Connects closest endpoints" FontSize="12" Foreground="{DynamicResource TextLightBrush}" 
                                   HorizontalAlignment="Center" TextAlignment="Center" Margin="0,2,0,0" TextWrapping="Wrap"/>
                        <TextBlock Name="Lb_SolCount" Text="1 / 2" FontSize="11" Foreground="{DynamicResource TextLightBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button Name="Btn_Next" Grid.Column="2" Content="❯" Height="30" FontSize="14" Padding="0"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="15,0,15,15">
            <StackPanel>
                <Label Name="Lb_Status" Content="Ready." HorizontalContentAlignment="Center" FontSize="11" Foreground="{DynamicResource TextLightBrush}" Margin="0,0,0,5"/>
                <Button Name="Btn_Commit" Content="JOIN ELEMENTS" Height="40" Style="{StaticResource PrimaryButton}" FontSize="13"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>