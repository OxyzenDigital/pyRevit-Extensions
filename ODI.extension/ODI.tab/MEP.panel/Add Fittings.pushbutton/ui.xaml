<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Fittings" Height="400" Width="450"
        WindowStartupLocation="Manual"
        ResizeMode="CanResize"
        WindowStyle="None"
        BorderBrush="#0080FF"
        BorderThickness="1"
        Background="#FAFAFA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Name="HeaderDrag" Grid.Row="0" Background="#0080FF" Padding="15,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Add Fittings" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Pipe Fitting Assistant" FontSize="11" Foreground="#E0E0E0"/>
                </StackPanel>

                <Button Name="Btn_Close" Grid.Column="1" Content="âœ•" Width="25" Height="25" 
                        Foreground="White" Background="Transparent" BorderThickness="0" 
                        FontSize="14" FontWeight="Bold" Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FFCCCC"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="15,0,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Fitting Selection -->
            <GroupBox Grid.Row="0" Header="1. Select Fitting" Padding="10" Background="White" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Pipe Fitting Family:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox Grid.Row="1" Name="Cmb_Fittings" DisplayMemberPath="DisplayName" Height="25"/>
                </Grid>
            </GroupBox>

            <!-- Placement Mode -->
            <GroupBox Grid.Row="1" Header="2. Placement" Padding="10" Background="White">
                <StackPanel>
                    <RadioButton Name="Rb_NearestEnd" Content="At Nearest Open End" IsChecked="True" Margin="0,0,0,5"/>
                    <RadioButton Name="Rb_SelectionPoint" Content="At Selection Point" Margin="0,0,0,0"/>
                    <TextBlock Name="Tb_SelectionInfo" Text="* Requires single click selection" FontSize="9" Foreground="Gray" Margin="18,2,0,0"/>
                </StackPanel>
            </GroupBox>

        </Grid>

        <!-- Footer / Action -->
        <Border Grid.Row="2" Padding="15" Background="#F0F0F0" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Name="Lb_Status" Text="Ready" VerticalAlignment="Center" Foreground="Gray" FontSize="11"/>
                <Button Name="Btn_Add" Grid.Column="1" Content="Add Fitting" Width="100" Height="30" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Window>