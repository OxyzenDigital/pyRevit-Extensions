<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join Pipes" Height="500" Width="360"
        WindowStartupLocation="Manual" Left="200" Top="200"
        ResizeMode="CanResize"
        WindowStyle="None"
        Foreground="{DynamicResource TextBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1"
        Background="{DynamicResource WindowBrush}">

    <Window.Resources>
        <!-- Consistent Color Palette -->
        <SolidColorBrush x:Key="WindowBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="ControlBrush" Color="White"/>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#808080"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0080FF"/>
        <SolidColorBrush x:Key="HeaderTextBrush" Color="White"/>
        <SolidColorBrush x:Key="HeaderSubTextBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="ButtonBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#E6F2FF"/>
        <SolidColorBrush x:Key="PressedBrush" Color="#CCE8FF"/>

        <!-- Shared Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Selections -->
            <RowDefinition Height="Auto"/> <!-- Solutions -->
            <RowDefinition Height="*"/>    <!-- Settings/Space -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Name="HeaderDrag" Grid.Row="0" Background="{DynamicResource AccentBrush}" Padding="15,10" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Join Pipes" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource HeaderTextBrush}"/>
                    <TextBlock Text="Smart Connect &amp; Route" FontSize="11" Foreground="{DynamicResource HeaderSubTextBrush}"/>
                </StackPanel>

                <Button Name="Btn_WinClose" Grid.Column="1" Content="âœ•" Width="30" Height="30" 
                        Foreground="{DynamicResource HeaderTextBrush}" Background="Transparent" BorderThickness="0" 
                        FontSize="14" FontWeight="Bold" Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FFCCCC"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Selection Area -->
        <Grid Grid.Row="1" Margin="15,0,15,5">
            <GroupBox Header="1. Selection" Padding="10">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="Btn_Select" Content="Select Source &amp; Target" Height="30" FontWeight="SemiBold"/>
                        <Button Name="Btn_Swap" Grid.Column="1" Content="Swap" Height="30" Margin="5,0,0,0"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Source:" FontWeight="Bold" Foreground="{DynamicResource TextLightBrush}"/>
                        <TextBlock Name="Lb_Source" Text="[None]" Grid.Column="1" TextTrimming="CharacterEllipsis" Foreground="{DynamicResource TextBrush}"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Target:" FontWeight="Bold" Foreground="{DynamicResource TextLightBrush}"/>
                        <TextBlock Name="Lb_Target" Text="[None]" Grid.Column="1" TextTrimming="CharacterEllipsis" Foreground="{DynamicResource TextBrush}"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Solutions Area -->
        <Grid Grid.Row="2" Margin="15,0,15,5">
            <GroupBox Header="2. Solution Preview" Padding="10">
                <StackPanel>
                     <!-- Info -->
                    <StackPanel Margin="0,5,0,15" HorizontalAlignment="Center">
                        <TextBlock Name="Lb_SolName" Text="Solution Name" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock Name="Lb_SolDesc" Text="Description text goes here." HorizontalAlignment="Center" Foreground="{DynamicResource TextLightBrush}" Margin="0,5,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Name="Lb_SolCount" Text="1 / 3" HorizontalAlignment="Center" Foreground="{DynamicResource TextLightBrush}" FontSize="11" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Controls -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="Btn_Prev" Grid.Column="0" Content="&lt;" Height="30"/>
                        <Button Name="Btn_Next" Grid.Column="2" Content="&gt;" Height="30"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Settings Area -->
        <Grid Grid.Row="3" Margin="15,0,15,15">
             <GroupBox Header="3. Routing Options" Padding="10">
                <StackPanel>
                    <CheckBox Name="Cb_Rolling" Content="Allow Rolling Offsets"/>
                    <CheckBox Name="Cb_Vertical" Content="Allow Vertical Drops"/>
                </StackPanel>
             </GroupBox>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="15,0,15,15">
            <StackPanel>
                <Label Name="Lb_Status" Content="Ready." HorizontalContentAlignment="Center" Foreground="{DynamicResource TextLightBrush}" Margin="0,5"/>
                <Button Name="Btn_Commit" Content="Join Pipes" Height="40" Background="{DynamicResource AccentBrush}" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>