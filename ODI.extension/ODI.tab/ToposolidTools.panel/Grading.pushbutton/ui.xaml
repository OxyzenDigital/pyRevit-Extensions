<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grading Tool" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <StackPanel Margin="20">
        
        <TextBlock Text="Grading Assistant" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Text="Define your grading path below." TextWrapping="Wrap" Margin="0,0,0,20" Foreground="#555"/>

        <GroupBox Header="Step 1: Define Stakes" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <DockPanel LastChildFill="False" Margin="0,0,0,5">
                    <TextBlock Text="Select Start &amp; End Stakes." VerticalAlignment="Center" Foreground="#444"/>
                    <Button Content="Select Stakes" Width="100" Height="25" Click="select_stakes" DockPanel.Dock="Right"/>
                </DockPanel>

                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Name="StartStakeID" Text="Start: [Not Selected]" Foreground="Red" Margin="0,2"/>
                        <TextBlock Name="EndStakeID" Text="End: [Not Selected]" Foreground="Red" Margin="0,2"/>
                    </StackPanel>

                    <Button Name="SwapBtn" Content="Swap" Grid.Column="1" Height="22" Click="swap_stakes" IsEnabled="False"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Step 2: Define Path" Margin="0,0,0,15" Padding="10">
            <DockPanel LastChildFill="False">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Select the model line/spline." Foreground="#444"/>
                    <TextBlock Name="LineID" Text="Line: [Not Selected]" Foreground="Red" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="Select Line" Width="100" Height="25" Click="select_line" DockPanel.Dock="Right" VerticalAlignment="Top"/>
            </DockPanel>
        </GroupBox>

        <Separator Margin="0,10"/>
        <Label Name="StatusLabel" Content="Ready..." Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,10" FontStyle="Italic"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="RunBtn" Content="Calculate &amp; Grade" Width="140" Height="30" Margin="0,0,10,0" Click="run_grading" IsEnabled="False"/>
            <Button Content="Cancel" Width="80" Height="30" IsCancel="True"/>
        </StackPanel>

    </StackPanel>
</Window>