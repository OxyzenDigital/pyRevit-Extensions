<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel Table Import" Height="380" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- File -->
            <RowDefinition Height="Auto"/> <!-- Separator -->
            <RowDefinition Height="Auto"/> <!-- Sheet -->
            <RowDefinition Height="Auto"/> <!-- Range -->
            <RowDefinition Height="Auto"/> <!-- Name -->
            <RowDefinition Height="*"/>    <!-- Spacer -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>
        
        <!-- File Selection -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Excel File:" Grid.Column="0"/>
            <TextBox Name="Tb_FilePath" Grid.Column="1" IsReadOnly="True" Background="#F0F0F0"/>
            <Button Name="Btn_Browse" Content="..." Width="30" Grid.Column="2" Click="Btn_Browse_Click"/>
        </Grid>

        <Separator Grid.Row="1" Margin="0,15"/>

        <!-- Sheet Selection -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Worksheet:" Grid.Column="0"/>
            <ComboBox Name="Cb_Sheets" Grid.Column="1" SelectionChanged="Cb_Sheets_SelectionChanged"/>
        </Grid>

        <!-- Range Selection -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Named Range:" Grid.Column="0"/>
            <ComboBox Name="Cb_Ranges" Grid.Column="1" SelectionChanged="Cb_Ranges_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding name}" FontWeight="Bold"/>
                            <TextBlock Text=" (" Foreground="Gray"/>
                            <TextBlock Text="{Binding sheet}" Foreground="Gray"/>
                            <TextBlock Text=")" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <!-- Table Name -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Table Name:" Grid.Column="0"/>
            <TextBox Name="Tb_Name" Grid.Column="1"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Name="Lb_Status" Text="Ready" Foreground="Gray" Margin="0,0,15,0" FontWeight="Normal"/>
            <Button Name="Btn_Import" Content="Create Table" Width="120" Click="Btn_Import_Click" IsDefault="True"/>
            <Button Name="Btn_Close" Content="Close" Width="80" Click="Btn_Close_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>